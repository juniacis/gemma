{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Amber Light",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#FFDEB4",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#FFFCF3",
					"name": "Base / Two",
					"slug": "base-2"
				},
				{
					"color": "#14120F",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#524D41",
					"name": "Contrast / Two",
					"slug": "contrast-2"
				},
				{
					"color": "#A79F90",
					"name": "Contrast / Three",
					"slug": "contrast-3"
				},
				{
					"color": "#FFEEB1",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#FFCC91",
					"name": "Accent / Two",
					"slug": "accent-2"
				},
				{
					"color": "#FACBDD",
					"name": "Accent / Three",
					"slug": "accent-3"
				},
				{
					"color": "#EBD5B8",
					"name": "Accent / Four",
					"slug": "accent-4"
				},
				{
					"color": "#E5E1DF",
					"name": "Accent / Five",
					"slug": "accent-5"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--newsreader)",
			"fontWeight": "400",
			"lineHeight": "1.5",
			"fontSize": "var(--wp--preset--font-size--medium)"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--newsreader)"
				}
			},
			"button": {
				"border": {
					"radius": "0"
				},
				"spacing": {
					"padding": {
						"top": "0.55rem !important",
						"right": "1.1rem !important",
						"bottom": "0.5rem !important",
						"left": "1.1rem !important"
					}
				},
				"typography": {
					"lineHeight": "1",
					"textDecoration": "none"
				}
			}
		}
	}
}
